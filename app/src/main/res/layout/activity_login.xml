<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login.LoginActivity">

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/tEmail">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:id="@+id/eEmail"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tPassword"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/tEmail" app:layout_constraintEnd_toEndOf="parent">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:id="@+id/ePassword"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tPhone"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/tPassword" app:layout_constraintEnd_toEndOf="parent">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/phone"
                android:id="@+id/ePhone"/>
    </android.support.design.widget.TextInputLayout>
    <Button
            android:text="@string/in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bLogin" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="49dp"
            app:layout_constraintTop_toBottomOf="@+id/tPhone" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>